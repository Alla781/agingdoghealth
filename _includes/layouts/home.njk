{% extends "./base.njk" %}

{% block content %}
  <section class="hero">
    <h1>Helping Your Best Friend Age Gracefully</h1>
    <p>Warm, expert guidance for caring owners of senior dogs. Simple tips, practical checklists, and honest advice.</p>
    <p>
      <a href="/articles/" class="btn">Explore Articles</a>
      <a href="/dogs/" class="btn btn-outline">Browse A–Z Conditions</a>
    </p>
  </section>

  <section class="grid">
    <h2>Popular Guides</h2>

    {% if collections and collections.articles and (collections.articles | length) > 0 %}
      <ul class="card-grid">
        {% for post in collections.articles %}
          {% if post and post.data and post.data.title %}
            <li class="card">
              <a href="{{ post.url | url }}">
                <h3>{{ post.data.title }}</h3>
                {% if post.data.excerpt %}<p>{{ post.data.excerpt }}</p>{% endif %}
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    {% else %}
      <p>No articles published yet.</p>
    {% endif %}
  </section>

  <section class="grid">
    <h2>Common Senior Conditions</h2>

    {% if collections and collections.dogs and (collections.dogs | length) > 0 %}
      <ul class="pill-list">
        {% for post in collections.dogs %}
          {% if post and post.data and post.data.title and post.url %}
            <li><a class="pill" href="{{ post.url | url }}">{{ post.data.title }}</a></li>
          {% endif %}
        {% endfor %}
      </ul>
    {% else %}
      <p>The A–Z list will appear here once conditions are added.</p>
    {% endif %}
  </section>
{% endblock %}
